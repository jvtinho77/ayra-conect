{
  "manifest_version": 3,
  "name": "Ayra Conect",
  "version": "1.0",
  "description": "Conectividade e automação para WhatsApp - Ayra.",
  "icons": {
    "16": "logo.png",
    "48": "logo.png",
    "128": "logo.png"
  },
  "permissions": [
    "scripting",
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://web.whatsapp.com/*",
    "http://localhost/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://web.whatsapp.com/*"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "styles.css"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "interceptor.js",
        "logo.png"
      ],
      "matches": [
        "https://web.whatsapp.com/*"
      ]
    }
  ]
}